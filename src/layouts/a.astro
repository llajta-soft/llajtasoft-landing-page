---
import '../styles/global.css';
---

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Íconos en Tres Círculos - Responsive</title>

  <style>
    /* Animación de flotación vertical */
    @keyframes floating {
      0% { transform: translateY(0); }
      50% { transform: translateY(-10px); }
      100% { transform: translateY(0); }
    }
    .animate-floating {
      animation: floating 3s ease-in-out infinite;
    }
    body {
      background-color: red;
      padding: 50px;
      margin: 0;
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
    }
    
    .circle-container {
      position: relative;
      width: 96vw;
      max-width: 400px;
      height: 96vw;
      max-height: 400px;
    }
    
    /* Variables responsivas para radios */
    :root {
      --radius-small: 40px;
      --radius-medium: 80px;
      --radius-large: 150px;
    }
    
    /* Media query para pantallas pequeñas */
    @media (max-width: 640px) {
      .circle-container {
        width: 90vw;
        height: 90vw;
      }
      :root {
        --radius-small: 30px;
        --radius-medium: 60px;
        --radius-large: 110px;
      }
    }
    
    /* Media query para pantallas muy pequeñas */
    @media (max-width: 480px) {
      .circle-container {
        width: 85vw;
        height: 85vw;
      }
      :root {
        --radius-small: 20px;
        --radius-medium: 45px;
        --radius-large: 80px;
      }
      .icon {
        width: 10vw !important;
        height: 10vw !important;
        max-width: 30px !important;
        max-height: 30px !important;
      }
    }
  </style>
</head>
<body class="bg-gray-900">

  <!-- Contenedor principal responsivo -->
  <div class="circle-container bg-red-500">

    <!-- Ícono central (Anillo 1: 1 ícono) -->
    <div class="absolute inset-0 flex items-center justify-center">
      <img src="icono1.svg" alt="Icono 1" class="icon w-12 h-12 animate-floating" style="animation-duration: 3s;">
    </div>

    <!-- Anillo 2: 4 íconos -->
    <div class="absolute inset-0 flex items-center justify-center">
      <!-- Ícono 2: ángulo 0° -->
      <div style="position: absolute; transform: rotate(0deg) translateX(var(--radius-medium)) rotate(0deg);">
        <img src="icono2.svg" alt="Icono 2" class="icon w-12 h-12 animate-floating" style="animation-duration: 3.2s;">
      </div>
      <!-- Ícono 3: ángulo 90° -->
      <div style="position: absolute; transform: rotate(90deg) translateX(var(--radius-medium)) rotate(-90deg);">
        <img src="icono3.svg" alt="Icono 3" class="icon w-12 h-12 animate-floating" style="animation-duration: 3.4s;">
      </div>
      <!-- Ícono 4: ángulo 180° -->
      <div style="position: absolute; transform: rotate(180deg) translateX(var(--radius-medium)) rotate(-180deg);">
        <img src="icono4.svg" alt="Icono 4" class="icon w-12 h-12 animate-floating" style="animation-duration: 3.6s;">
      </div>
      <!-- Ícono 5: ángulo 270° -->
      <div style="position: absolute; transform: rotate(270deg) translateX(var(--radius-medium)) rotate(-270deg);">
        <img src="icono5.svg" alt="Icono 5" class="icon w-12 h-12 animate-floating" style="animation-duration: 3.8s;">
      </div>
    </div>

    <!-- Anillo 3: 7 íconos -->
    <div class="absolute inset-0 flex items-center justify-center">
      <!-- Ícono 6: ángulo 0° -->
      <div style="position: absolute; transform: rotate(0deg) translateX(var(--radius-large)) rotate(0deg);">
        <img src="icono6.svg" alt="Icono 6" class="icon w-12 h-12 animate-floating" style="animation-duration: 4s;">
      </div>
      <!-- Ícono 7: ángulo 51.43° -->
      <div style="position: absolute; transform: rotate(51.43deg) translateX(var(--radius-large)) rotate(-51.43deg);">
        <img src="icono7.svg" alt="Icono 7" class="icon w-12 h-12 animate-floating" style="animation-duration: 4.2s;">
      </div>
      <!-- Ícono 8: ángulo 102.86° -->
      <div style="position: absolute; transform: rotate(102.86deg) translateX(var(--radius-large)) rotate(-102.86deg);">
        <img src="icono8.svg" alt="Icono 8" class="icon w-12 h-12 animate-floating" style="animation-duration: 4.4s;">
      </div>
      <!-- Ícono 9: ángulo 154.29° -->
      <div style="position: absolute; transform: rotate(154.29deg) translateX(var(--radius-large)) rotate(-154.29deg);">
        <img src="icono9.svg" alt="Icono 9" class="icon w-12 h-12 animate-floating" style="animation-duration: 4.6s;">
      </div>
      <!-- Ícono 10: ángulo 205.72° -->
      <div style="position: absolute; transform: rotate(205.72deg) translateX(var(--radius-large)) rotate(-205.72deg);">
        <img src="icono10.svg" alt="Icono 10" class="icon w-12 h-12 animate-floating" style="animation-duration: 4.8s;">
      </div>
      <!-- Ícono 11: ángulo 257.15° -->
      <div style="position: absolute; transform: rotate(257.15deg) translateX(var(--radius-large)) rotate(-257.15deg);">
        <img src="icono11.svg" alt="Icono 11" class="icon w-12 h-12 animate-floating" style="animation-duration: 5s;">
      </div>
      <!-- Ícono 12: ángulo 308.58° -->
      <div style="position: absolute; transform: rotate(308.58deg) translateX(var(--radius-large)) rotate(-308.58deg);">
        <img src="icono12.svg" alt="Icono 12" class="icon w-12 h-12 animate-floating" style="animation-duration: 5.2s;">
      </div>
    </div>

  </div>

</body>
</html>